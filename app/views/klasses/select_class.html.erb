<div classs="row mt-5">
  <div class="col-md-4 offset-md-4 text-center">
    <h2>Student Name: <%= @student.name %></h1>
    <div class="card">
        <div class="card-header">
        <h1>Add To Class</h1>
        </div>
        <div class="card-body">
            <%= form_for add_to_class_path do |f| %>
                <%= select_tag 'class_id', options_for_select(@classes.map{|c| [c.name, c.id] }), include_blank: 'Select Course', class: 'form-control' %>
                <%= hidden_field_tag :student_id, @student.id %>
                <button type="submit" class="btn btn-primary mt-2">Add To Class</button>
            <%end%>
        </div>
    </div>
  </div>
</div>
